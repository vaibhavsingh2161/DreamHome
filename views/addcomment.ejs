<%- include('./partials/header') -%>
<link  rel="stylesheet" href="/addcomment.css">
<body>
    <div class="container bg-body-secondary mt-3">
        <h1>Add Comment</h1>
        <form action="/add-comment" method="post">
          <input type="hidden" name="propertynumber" value="<%= propertynumber %>">
          <div class="form-group">
            <label for="author">Client Number:</label>
            <input type="text" name="clientnumber" id="author" required>
          </div>
          <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea name="comment" id="comment" required></textarea>
          </div>
          
          <button type="submit" class="btn-submit">Submit</button>
        </form>
      </div>
      
</body>