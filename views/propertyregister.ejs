<%- include('./partials/header') -%>
<link rel="stylesheet" href="/style.css">
<body > 
    <div class="container bg-body-secondary">
        <div class="title">Property Registration</div>
          <form action="/propertyregister" method="post">



          
            <div class="user__details">

              <div class="input__box">
                <span class="details">Property Number</span>
                <input type="text"  name="propertynumber" placeholder="E.g: 21BCS136" required>
              </div>
            
              <div class="input__box">
                <span class="details">Type</span>
                <input type="text" name="type"  placeholder="" required>
              </div>
          
              <div class="input__box">
                <span class="details">Rent</span>
                <input type="number" name="rent"  placeholder="" required>
              </div>


              <div class="input__box">
                <span class="details">Rooms</span>
                <input type="number"  name="rooms" placeholder="" required>
              </div>

              <div class="input__box">
                <span class="details"> propertyAddress</span>
                <input type="text"  name="propertyaddress" placeholder="" required>
              </div>

              <div class="user__details"> </div>
            
              <div class="input__box">
                <span class="details">Owner Number</span>
                <input type="tel" name="ownernumber"  placeholder="" required>
              </div>
          
              <div class="input__box">
                <span class="details">Person/Buisness fname</span>
                <input type="text"  name="fname" placeholder="" required>
              </div>
              <div class="input__box">
                <span class="details">Person/Buisness lname</span>
                <input type="text"  name="lname" placeholder="" required>
              </div>

              <div class="input__box">
                <span class="details"> owner Address</span>
                <input type="text" name="owneraddress" placeholder="" required>
              </div>

              <div class="input__box">
                <span class="details">Telephone Number</span>
                <input type="tel"   name="telephoneno" placeholder="" required>
              </div>
              

              

              

              <div class="input__box">
                <span class="details">Managed by StaffNo</span>
                <input type="text"  name="staffno" placeholder="" required>
              </div>

              <div class="input__box">
                <span class="details">Registered at Branch</span>
                <input type="text"  name="branchno" placeholder="" required>
              </div>

            </div>
        
            <div class="button">
              <input type="submit" value="Register">
            </div>
          </form>
      </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>

</html>